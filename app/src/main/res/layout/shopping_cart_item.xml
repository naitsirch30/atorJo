<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopping_item_container"
    android:layout_marginTop="20dp">

    <ImageView
        android:src="@drawable/logo_hair_styling"
        android:id="@+id/shopping_item_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/shopping_item_image"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Item"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/productsansbold"/>

        <TextView
            android:id="@+id/product_price"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 20.000"
            android:textSize="12sp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/productsansbold"/>

    </LinearLayout>

    <ImageView
        android:src="@drawable/ic_remove_shopping_cart"
        android:id="@+id/shopping_item_remove"
        android:layout_marginTop="5dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>