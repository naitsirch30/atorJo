<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_service_dashboard_item">

    <ImageView
        android:id="@+id/main_service_group_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/logo_make_up"
        />

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/main_service_group_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textSize="15sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/productsansbold"
            android:textColor="@color/black"
            android:textAlignment="textStart"
            android:id="@+id/main_service_group_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="082190230"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/productsansbold"
            android:textColor="@color/gray"
            android:id="@+id/main_service_group_description"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 20.000"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/productsansbold"
            android:textColor="@color/black"
            android:id="@+id/main_service_group_price"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>